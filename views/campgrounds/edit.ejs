<% include ../partials/header %>

<div id="newCampground">
<h1>Update <%= campground.name %></h1>
<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">

      <div class="form-group">
         <label for="newCampgroundName">Name:</label>
         <input class="form-control" id="newCampgroundName" type="text" name="campground[name]" value="<%= campground.name %>">
     </div>
     <div class="form-group">
        <label for="newCampgroundImage">Image:</label>
        <input class="form-control" id="newCampgroundImage" type="text" name="campground[image]" value="<%= campground.image %>">
     </div>
     <div class="form-group">
        <label for="newCampgroundImage">Description:</label>
        <input class="form-control" id="newCampgroundImage" type="text" name="campground[description]" value="<%= campground.description %>">
     </div>
    <button class="btn btn-primary btn-block" type="submit">Update Campground</button>
</form>
<a href="/campgrounds">back</a>
</div>

<% include ../partials/footer %>