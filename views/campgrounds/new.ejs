<div id="newCampground">
<h1>New Campground</h1>
<form action="/campgrounds" method="POST">

      <div class="form-group">
         <label for="newCampgroundName">Name:</label>
         <input class="form-control" id="newCampgroundName" type="text" name="campground[name]" placeholder="Name">
     </div>
     <div class="form-group">
        <label for="newCampgroundImage">Image:</label>
        <input class="form-control" id="newCampgroundImage" type="text" name="campground[image]" placeholder="Image">
     </div>
     <div class="form-group">
        <label for="newCampgroundImage">Description:</label>
        <input class="form-control" id="newCampgroundImage" type="text" name="campground[description]" placeholder="Description">
     </div>
